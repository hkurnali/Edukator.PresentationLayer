@model List<Edukator.EntityLayer.Concrete.Testimonial>


<section class="w3l-testimonials" id="testimonials">
    <!-- /grids -->
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-4 py-md-3 py-2 pb-lg-0">
            <h5 class="title-subw3hny text-center mb-1">Yorumlar</h5>
            @foreach(var x in Model)
            {
            <h3 class="title-w3l two text-center mb-sm-5 mb-4">
             @x.TestimonialTitle </h3>}
                   
            <!-- /grids -->
            
            <div class="testimonial-width">
           
                <div class="owl-two row">
                    @foreach (var x in Model)
                    {
                    <div class="col-lg-4 col-md-6 item mt-md-5 mt-4">
                        <div class="testimonial-content">
                            <div class="testimonial">
                                <i class="fas fa-quote-right"></i>
                                <blockquote>
                                    <q>
                                        @x.TestimonialDescription
                                    </q>
                                </blockquote>
                                <div class="testi-des">
                                    <div class="peopl align-self">
                                        <h3>@x.TestimonialName</h3>
                                        <p class="indentity">@x.TestimonialCompany</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                  
                </div>
                    
            </div>
           
        </div>
        <!-- /grids -->
    </div>
    <!-- //grids -->
</section>