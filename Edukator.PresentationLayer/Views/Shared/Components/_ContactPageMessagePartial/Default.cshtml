
@model List<Edukator.EntityLayer.Concrete.ContactPageMessage>

<div class="w3l-contact-10 py-5" id="contact">
    <div class="form-41-mian pt-lg-4 pt-md-3 pb-lg-4">
        <div class="container">
            @foreach(var x in Model)
            {
            <div class="heading text-center mx-auto">
                <h5 class="title-subw3hny text-center">@x.Title1</h5>
                <h3 class="title-w3l"> <span class="inn-text">@x.title2 </span></h3>
            </div>
            
            <div class="contacts-5-grid-main mt-5">
                <div class="contacts-5-grid">
                    <div class="map-content-5">
                        <div class="d-grid grid-col-2">
                            <div class="contact-type">
                                <div class="address-grid">
                                    <h6><span class="fas fa-map-marked-alt"></span> Adres</h6>
                                    <p>@x.Address</p>

                                </div>
                                <div class="address-grid">
                                    <h6><span class="fas fa-envelope-open-text"></span> Mail</h6>
                                    <a href="@x.Mail" class="link1">@x.Mail</a>
                                    
                                       

                                </div>
                                <div class="address-grid">
                                    <h6><span class="fas fa-phone-alt"></span> Telefon</h6>
                                    <a href="tel:+12 324-016-695" class="link1">@x.Tel</a>
                                   

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-inner-cont mt-5">
                <form action="#" method="post" class="signin-form">
                    <div class="form-grids">
                        <div class="form-input">
                            <input type="text" name="Name" placeholder="Adınızı Yazınız *"
                                   required="" />
                        </div>
                        <div class="form-input">
                            <input type="text" name="Subject" placeholder="Konuyu Yazınız "
                                   required />
                        </div>
                        <div class="form-input">
                            <input type="email" name="Sender" placeholder="Mail Adresiniz "
                                   required />
                        </div>
                        <div class="form-input">
                            <input type="text" name="Phone" placeholder="Telefon Numaranız "
                                   required />
                        </div>
                    </div>
                    <div class="form-input">
                        <textarea name="Message" placeholder="İletmek istediğiniz mesajı yazınız"
                                  required=""></textarea>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                    </div>
                </form>
            </div>
            }
        </div>
           
    </div>
    <!-- //contacts-5-grid -->
</div>