

@model Edukator.EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Sosyal Medya Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="SocialMediaID" />
            <div class="mb-3">
                <label for="socialmedianame" class="form-label">Sosyal Media Başlığı</label>
                <input type="text" class="form-control" id="socialmedianame" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label for="socialmediaicon" class="form-label">Sosyal Media İkonu</label>
                <input type="text" class="form-control" id="socialmediaicon" asp-for="Icon" />
            </div>
            <div class="mb-3">
                <label for="socialmediaiconimgurl" class="form-label">Sosyal Media Url </label>
                <input type="text" class="form-control" id="socialmediaiconimgurl" asp-for="ImgUrl" />
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>

