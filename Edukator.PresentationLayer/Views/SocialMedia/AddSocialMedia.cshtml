@model Edukator.EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni Sosyal Medya Girişi</h6>
        <form method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Sosyal Media Başlığı</label>
                <input type="text" class="form-control" id="Name" asp-for="Name"/>
            </div>
            <div class="mb-3">
                <label for="Icon" class="form-label">Sosyal Media İkonu</label>
                <input type="text" class="form-control" id="Icon" asp-for="Icon" />
            </div>
             <div class="mb-3">
                <label for="ImgUrl" class="form-label">Sosyal Media Url </label>
                <input type="text" class="form-control" id="ImgUrl" asp-for="ImgUrl" />
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>

