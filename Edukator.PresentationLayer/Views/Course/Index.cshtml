@model List<Edukator.EntityLayer.Concrete.Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kurslar</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">ImgUrl</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">İnceleme</th>
                    <th scope="col">Kategori ID</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Siteye Git</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                    <tr>
                        <th scope="row">@item.CourseID</th>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.ImageURL</td>
                        <td>@item.Price tl</td>
                        <td>@item.Review</td>
                        <td>@item.Category.CategoryName</td>
                        <td><a href="/Course/DeleteCourse/@item.CourseID"class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Course/UpdateCourse/@item.CourseID" class="btn btn-outline-success">Güncelle</a></td>
                        <td><a href="#" class="btn btn-outline-dark">Siteye Git</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Course/AddCourse/" class="btn btn-outline-primary">Yeni Kurs Girişi</a>
    </div>
</div>

